<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/lightGrey"
    android:padding="20dp">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/grey"
        android:paddingHorizontal="15dp"
        android:paddingVertical="50dp"
        android:background="@drawable/shape3"
        android:elevation="5dp"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/AC"
                style="@style/Button1"
                android:onClick="clear"
                android:text="AC" />

            <Button
                android:id="@+id/num1"
                style="@style/Button2"
                android:onClick="one"
                android:text="1" />

            <Button
                android:id="@+id/num4"
                style="@style/Button2"
                android:onClick="four"
                android:text="4" />

            <Button
                android:id="@+id/num7"
                style="@style/Button2"
                android:onClick="seven"
                android:text="7" />

            <Button
                android:id="@+id/pourcentage"
                style="@style/Button5"
                android:onClick="pour"
                android:text="%" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/C"
                style="@style/Button5"
                android:onClick="backspace"
                android:text="C" />

            <Button
                android:id="@+id/num2"
                style="@style/Button2"
                android:onClick="two"
                android:text="2" />

            <Button
                android:id="@+id/num5"
                style="@style/Button2"
                android:onClick="five"
                android:text="5" />

            <Button
                android:id="@+id/num8"
                style="@style/Button2"
                android:onClick="eight"
                android:text="8" />

            <Button
                android:id="@+id/num0"
                style="@style/Button2"
                android:onClick="zero"
                android:text="0" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/div"
                style="@style/Button5"
                android:onClick="divide"
                android:text="/" />

            <Button
                android:id="@+id/num3"
                style="@style/Button2"
                android:onClick="three"
                android:text="3" />

            <Button
                android:id="@+id/num6"
                style="@style/Button2"
                android:onClick="six"
                android:text="6 " />

            <Button
                android:id="@+id/num9"
                style="@style/Button2"
                android:onClick="nine"
                android:text="9" />

            <Button
                android:id="@+id/dot"
                style="@style/Button2"
                android:onClick="decimal"
                android:text="." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="451dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/multiply"
                style="@style/Button5"
                android:onClick="multiply"
                android:text="*" />

            <Button
                android:id="@+id/plus"
                style="@style/Button5"
                android:onClick="add"
                android:text="+" />

            <Button
                android:id="@+id/minus"
                style="@style/Button5"
                android:onClick="subtract"
                android:text="-" />

            <Button
                android:id="@+id/equal"
                style="@style/Button6"
                android:layout_height="match_parent"
                android:onClick="equal"

                android:text="=" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>